                        <ui:ToggleSwitch x:Name="disableAppUpdates" Content="Disable Automatic App Updates" Margin="0,10,0,0" Checked="disableAppUpdates_Checked" Unchecked="disableAppUpdates_Unchecked"/>
                    </StackPanel>
