<ui:UiWindow x:Class="ShadesTweaker.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="1500" MinHeight="650"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        WindowStyle="None">
    <Grid>
        <ui:TitleBar ShowClose="True" Title="Shades Tweaker v1.6" ShowMaximize="False" ShowHelp="False" ShowMinimize="True" CanMaximize="False"  VerticalAlignment="Top" />
        <TabControl x:Name="myTabControl" Margin="0,42,0,0">
            <!-- Tab 1 -->
            <TabItem Width="auto" FontSize="12">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal"  Margin="55,0,0,0">
                        <ui:SymbolIcon Symbol="InprivateAccount20" Margin="0,0,5,0"/>
                        <TextBlock Text="{DynamicResource tabItemTextGeneral}" />
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <StackPanel  MaxWidth="400" MinWidth="400" HorizontalAlignment="Left">
                        <Label Foreground="#7F8487" Content="{DynamicResource system:StringKey}" />
                        <ui:ToggleSwitch FontSize="12" Margin="0,5,0,0" x:Name="errorReportingToggle" Checked="errorReportingDisable_Checked" Unchecked="errorReportingDisable_Unchecked" Content="{DynamicResource errorReportingToggle}" ToolTip="{DynamicResource errorReportingToggleTooltip}" />
                        <ui:ToggleSwitch FontSize="12" Margin="0,10,0,0" x:Name="modernStandbyToggle" Checked="modernStandbyToggle_Checked" Unchecked="modernStandbyToggle_Unchecked" Content="{DynamicResource modernStandbyToggle}" ToolTip="{DynamicResource modernStandbyToggleTooltip}" />
                        <ui:ToggleSwitch FontSize="12" Margin="0,10,0,0" x:Name="fastStartupToggle" Checked="fastStartupToggle_Checked" Unchecked="fastStartupToggle_Unchecked" Content="{DynamicResource fastStartupToggle}" ToolTip="{DynamicResource fastStartupToggleTooltip}" />
                        <ui:ToggleSwitch FontSize="12" Margin="0,10,0,0" x:Name="disableMemoryCompressionToggle" Checked="disableMemoryCompressionToggle_Checked" Unchecked="disableMemoryCompressionToggle_Unchecked" Content="{DynamicResource disableMemoryCompressionToggle}" ToolTip="{DynamicResource disableMemoryCompressionToggleTooltip}" />
                        <ui:ToggleSwitch FontSize="12" Margin="0,10,0,0" x:Name="compatibilityAssistantToggle" Checked="compatibilityassistansToggle_Checked" Unchecked="compatibilityAssistantToggle_Unchecked" Content="{DynamicResource compatibilityAssistantToggle}" ToolTip="{DynamicResource compatibilityAssistantToggleTooltip}" />
                        <ui:ToggleSwitch FontSize="12" Margin="0,10,0,0" x:Name="printSpoolerToggle" Checked="printspoolerToggle_Checked" Unchecked="printspoolerToggle_Unchecked" Content="{DynamicResource printSpoolerToggle}" ToolTip="{DynamicResource printSpoolerToggleTooltip}" />
                        <ui:ToggleSwitch FontSize="12" Margin="0,10,0,0" x:Name="sysMainToggle" Checked="SysMain_Checked" Unchecked="SysMain_Unchecked" Content="{DynamicResource sysMainToggle}" ToolTip="{DynamicResource sysMainToggleTooltip}" />
                    </StackPanel>
                    <StackPanel Margin="800,0,0,0" MaxWidth="430" MinWidth="430" HorizontalAlignment="Center">
                        <Label Foreground="#7F8487" Content="{DynamicResource windowsDefenderLabel}"/>
                        <ui:ToggleSwitch x:Name="defenderFullToggle" FontSize="12" Content="{DynamicResource defenderFullToggle}" Margin="0,10,0,0" Checked="defender_full_Checked" Unchecked="defender_full_Unchecked" ToolTip="{DynamicResource defenderFullToggleTooltip}"/>
                        <ui:ToggleSwitch x:Name="defenderToggle" FontSize="12" Content="{DynamicResource disableDefenderAntiSpywareToggle}" Margin="0,10,0,0" Checked="defender_Checked" Unchecked="defender_Unchecked" ToolTip="{DynamicResource defenderToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="defenderAntivirusToggle" FontSize="12" Content="{DynamicResource disableDefenderAntivirusToggle}" Margin="0,10,0,0" Checked="defender_antivirus_Checked" Unchecked="defender_antivirus_Unchecked" ToolTip="{DynamicResource defenderAntivirusToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="defenderRealTimeToggle" FontSize="12" Content="{DynamicResource disableDefenderRealTimeToggle}" Margin="0,10,0,0" Checked="defender_real_Checked" Unchecked="defender_real_Unchecked" ToolTip="{DynamicResource defenderRealTimeToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="smartScreenToggle" FontSize="12" Content="{DynamicResource disableSmartScreenToggle}" Margin="0,10,0,0" Checked="smartscreen_Checked" Unchecked="smartScreen_Checked" ToolTip="{DynamicResource smartScreenToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="firewallToggle" FontSize="12" Content="{DynamicResource turnOffFirewallToggle}" Margin="0,10,0,0" Checked="firewall_Checked" Unchecked="firewall_Unchecked" ToolTip="{DynamicResource firewallToggleToolTip}"/>
                    </StackPanel>
                    <StackPanel Margin="0,250,0,0" MaxWidth="380" MinWidth="380" HorizontalAlignment="Left">
                        <Label Foreground="#7F8487" Content="{DynamicResource windowsUpdateLabel}" />
                        <ui:ToggleSwitch x:Name="deliveryToggle" FontSize="12" Content="{DynamicResource disableDeliveryOptimizationToggle}" Margin="0,5,0,0" Checked="delivery_Checked" Unchecked="delivery_Unchecked" ToolTip="{DynamicResource deliveryToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="autoRestartNotificationsToggle" FontSize="12" Content="{DynamicResource disableAutoRestartNotificationsToggle}" Margin="0,10,0,0" Checked="AutoRestart_Notifications_Checked" Unchecked="AutoRestart_Notifications_Unchecked" ToolTip="{DynamicResource autoRestartNotificationsToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="includeDriversToggle" FontSize="12" Content="{DynamicResource disableIncludeDriversToggle}" Margin="0,10,0,0" Checked="IncludeDrivers_Checked" Unchecked="IncludeDrivers_Unchecked" ToolTip="{DynamicResource includeDriversToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="featureUpdateToggle" FontSize="12" Content="{DynamicResource disableFeatureUpdateToggle}" Margin="0,10,0,0" Checked="FeatureUpdate_Checked" Unchecked="FeatureUpdate_Unchecked" ToolTip="{DynamicResource featureUpdateToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="blockEdgeToggle" FontSize="12" Content="{DynamicResource blockMicrosoftEdgeInstallToggle}" Margin="0,10,0,0" Checked="blockedge_Checked" Unchecked="blockedge_Unchecked" ToolTip="{DynamicResource blockEdgeToggleToolTip}"/>
                    </StackPanel>
                    <StackPanel Margin="430,0,0,0" MaxWidth="400" MinWidth="400" HorizontalAlignment="Left">
                        <Label Foreground="#7F8487" Content="{DynamicResource diskDrivesLabel}" />
                        <ui:ToggleSwitch x:Name="storagesenseToggle" FontSize="12" Content="{DynamicResource disableStorageSenseToggle}" Margin="0,5,0,0" Checked="storagesenseToggle_Checked" Unchecked="storagesenseToggle_Unchecked" ToolTip="{DynamicResource storagesenseToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="restoreToggle" FontSize="12" Content="{DynamicResource disableSystemRestoreToggle}" Margin="0,10,0,0" Checked="restore_Checked" Unchecked="restore_Unchecked" ToolTip="{DynamicResource restoreToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="superfetchToggle" FontSize="12" Content="{DynamicResource disableSuperfetchToggle}" Margin="0,10,0,0" Checked="superfetch_Checked" Unchecked="superfetch_Unchecked" ToolTip="{DynamicResource superfetchToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="hibernationToggle" FontSize="12" Content="{DynamicResource disableHibernationToggle}" Margin="0,10,0,0" Checked="hibernation_Checked" Unchecked="hibernation_Unchecked" ToolTip="{DynamicResource hibernationToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="ntfstimeToggle" FontSize="12" Content="{DynamicResource disableNTFSLastAccessTimeToggle}" Margin="0,10,0,0" Checked="ntfstime_Checked" Unchecked="ntfstime_Unchecked" ToolTip="{DynamicResource ntfstimeToggleToolTip}"/>
                    </StackPanel>
                    <StackPanel Margin="-190,240,0,0" MaxWidth="420" MinWidth="420">
                        <Label Foreground="#7F8487" Content="{DynamicResource contextMenuLabel}" />
                        <ui:ToggleSwitch x:Name="batToggle" FontSize="12" Content="{DynamicResource addWindowsBatchFileToggle}" Margin="0,5,0,0" Checked="bat_Checked" Unchecked="bat_Unchecked" ToolTip="{DynamicResource batToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="copyPathToggle" FontSize="12" Content="{DynamicResource addCopyAsPathToggle}" Margin="0,10,0,0" Checked="copypath_Checked" Unchecked="copypath_Unchecked" ToolTip="{DynamicResource copyPathToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="vbsToggle" FontSize="12" Content="{DynamicResource addVBScriptScriptFileToggle}" Margin="0,10,0,0" Checked="vbs_Checked" Unchecked="vbs_Unchecked" ToolTip="{DynamicResource vbsToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="nvidiaToggle" FontSize="12" Content="{DynamicResource removeNVIDIAControlPanelToggle}" Margin="0,10,0,0" Checked="nvidia_Checked" Unchecked="nvidia_Unchecked" ToolTip="{DynamicResource nvidiaToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="ownershipToggle" FontSize="12" Content="{DynamicResource addTakeOwnershipToggle}" Margin="0,10,0,0" Checked="ownership_Checked" Unchecked="ownership_Unchecked" ToolTip="{DynamicResource ownershipToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="ramCleanerToggle" FontSize="12" Content="{DynamicResource addramCleanerToggle}" Margin="0,10,0,0" Checked="ramCleaner_Checked" Unchecked="ramCleaner_Unchecked" ToolTip="{DynamicResource ramCleanerToggleToolTip}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 2 -->
            <TabItem Width="auto" FontSize="12">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Margin="50,0,0,0">
                        <ui:SymbolIcon Symbol="Broom16" Margin="0,0,5,0" />
                        <TextBlock Text="{DynamicResource tabItemTextCleaning}" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <StackPanel Margin="10,10,0,0" MaxWidth="400" MinWidth="400" HorizontalAlignment="Left">
                        <CheckBox x:Name="logsCheckbox" FontSize="12" Content="{DynamicResource windowsLogsCheckbox}" ToolTip="{DynamicResource logsCheckboxToolTip}"/>
                        <CheckBox x:Name="tempCheckbox" FontSize="12" Content="{DynamicResource tempFilesCheckbox}" ToolTip="{DynamicResource tempCheckboxToolTip}"/>
                        <CheckBox x:Name="windowsOldCheckbox" FontSize="12" Content="{DynamicResource clearPreviousWindowsInstallationsCheckbox}" ToolTip="{DynamicResource windowsOldCheckboxToolTip}"/>
                        <CheckBox x:Name="errorReportingCheckbox" FontSize="12" Content="{DynamicResource errorReportingFilesCheckbox}" ToolTip="{DynamicResource errorReportingCheckboxToolTip}"/>
                        <CheckBox x:Name="liveKernelCachesCheckbox" FontSize="12" Content="{DynamicResource liveKernelCachesCheckbox}" ToolTip="{DynamicResource liveKernelCachesCheckboxToolTip}"/>
                        <CheckBox x:Name="downloadsCheckbox" FontSize="12" Content="{DynamicResource downloadsFolderCheckbox}" ToolTip="{DynamicResource downloadsCheckboxToolTip}"/>
                        <CheckBox x:Name="recycleBinCheckbox" FontSize="12" Content="{DynamicResource recycleBinCheckbox}" ToolTip="{DynamicResource recycleBinCheckboxToolTip}"/>
                        <CheckBox x:Name="searchIndexCheckbox" FontSize="12" Content="{DynamicResource windowsSearchIndexCheckbox}" ToolTip="{DynamicResource searchIndexCheckboxToolTip}"/>
                        <CheckBox x:Name="prefetchCheckbox" FontSize="12" Content="{DynamicResource prefetchFilesCheckbox}" ToolTip="{DynamicResource prefetchCheckboxToolTip}"/>
                        <CheckBox x:Name="fontCacheCheckbox" FontSize="12" Content="{DynamicResource windowsFontCacheCheckbox}" ToolTip="{DynamicResource fontCacheCheckboxToolTip}"/>
                        <CheckBox x:Name="installerCheckbox" FontSize="12" Content="{DynamicResource windowsInstallerCacheCheckbox}" ToolTip="{DynamicResource installerCheckboxToolTip}"/>
                        <CheckBox x:Name="softwareDistributionCheckbox" FontSize="12" Content="{DynamicResource softwareDistributionCheckbox}" ToolTip="{DynamicResource softwareDistributionCheckboxTooltip}"/>
                        <CheckBox x:Name="googleChromeCacheCheckbox" FontSize="12" Content="{DynamicResource googleChromeCacheCheckbox}" ToolTip="{DynamicResource googleChromeCacheCheckboxTooltip}"/>
                        <CheckBox x:Name="edgeCacheCheckbox" FontSize="12" Content="{DynamicResource edgeCacheCheckbox}" ToolTip="{DynamicResource edgeCacheCheckboxTooltip}"/>
                        <CheckBox x:Name="otherLogsCheckbox" FontSize="12" Content="{DynamicResource otherLogsCheckbox}" ToolTip="{DynamicResource otherLogsCheckboxTooltip}"/>
                     
                        <StackPanel Margin="0,15,0,0" >
                            <Label x:Name="sizeLabel" FontWeight="Bold" FontSize="18" Foreground="#7F8487" Content="{DynamicResource sizeLabelContent}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="10,10,15,10" HorizontalAlignment="Right">
                        <ui:TextBox x:Name="outputTextBox" FontSize="12" MinHeight="460" MaxHeight="460" MinWidth="1100" MaxWidth="110"/>
                        <ProgressBar x:Name="progressBar" Margin="0,5,0,0" />
                        <WrapPanel Margin="10,10,15,10" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button Width="100" Margin="-10,0,0,0" Content="{DynamicResource analyzeButtonContent}" Click="AnalyzeButton_Click" />
                            <Button Width="100" Margin="10,0,0,0" Content="{DynamicResource cleanButtonContent}" Click="CleanButton_Click" />
                        </WrapPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 3 -->
            <TabItem Width="auto" FontSize="12">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Margin="35,0,0,0">
                        <ui:SymbolIcon Symbol="WindowSettings20" Margin="-5,0,0,0" />
                        <TextBlock Text="Windows 10 / 11" Margin="2,0,5,0"/>
                    </StackPanel>
                </TabItem.Header>
                <WrapPanel Margin="10">
                    <StackPanel MaxWidth="400" MinWidth="400" HorizontalAlignment="Left">
                        <Label Foreground="#7F8487"  Content="Windows 10/11"/>
                        <ui:ToggleSwitch x:Name="enableOldContextMenu" FontSize="12" Content="{DynamicResource enableOldContextMenuToggle}" Margin="0,5,0,0" Checked="oldcontextmenu_Checked" Unchecked="oldcontextmenu_Unchecked" ToolTip="{DynamicResource enableOldContextMenuToolTip}"/>
                        <ui:ToggleSwitch x:Name="disableWidgets" FontSize="12" Content="{DynamicResource disableWidgetsToggle}" Margin="0,10,0,0" Checked="widgets_Checked" Unchecked="widgets_Unchecked" ToolTip="{DynamicResource disableWidgetsToolTip}"/>
                        <ui:ToggleSwitch x:Name="disablePeek" FontSize="12" Content="{DynamicResource disablePeekToggle}" Margin="0,10,0,0" Checked="peek_Checked" Unchecked="peek_Unchecked" ToolTip="{DynamicResource disablePeekToolTip}"/>
                        <ui:ToggleSwitch x:Name="removeMeetNowIcon" FontSize="12" Content="{DynamicResource removeMeetNowIconToggle}" Margin="0,10,0,0" Checked="teams_Checked" Unchecked="teams_Unchecked" ToolTip="{DynamicResource removeMeetNowIconToolTip}"/>
                        <ui:ToggleSwitch x:Name="disableBingSearch" FontSize="12" Content="{DynamicResource disableBingSearchToggle}" Margin="0,10,0,0" ToolTip="{DynamicResource disableBingSearchToolTip}" Checked="bing_Checked" Unchecked="bing_Unchecked"/>
                        <ui:ToggleSwitch x:Name="enableDarkMode" FontSize="12" Content="{DynamicResource enableDarkModeToggle}" Margin="0,10,0,0" Checked="darkMode_Checked" Unchecked="darkMode_Unchecked" ToolTip="{DynamicResource enableDarkModeToolTip}"/>
                        <ui:ToggleSwitch x:Name="disableTransparency" FontSize="12" Content="{DynamicResource disableTransparencyToggle}" Margin="0,10,0,0" Checked="transparency_Checked" Unchecked="transparency_Unchecked" ToolTip="{DynamicResource disableTransparencyToolTip}"/>
                        <ui:ToggleSwitch x:Name="showFileExtensions" FontSize="12" Content="{DynamicResource showFileExtensionsToggle}" Margin="0,10,0,0" Checked="showExtensions_Checked" Unchecked="showExtensions_Unchecked" ToolTip="{DynamicResource showFileExtensionsToolTip}"/>
                        <ui:ToggleSwitch x:Name="increaseThumbnailSize" FontSize="12" Content="{DynamicResource increaseThumbnailSizeToggle}" Margin="0,10,0,0" Checked="increaseThumbnailSize_Checked" Unchecked="increaseThumbnailSize_Unchecked" ToolTip="{DynamicResource increaseThumbnailSizeToolTip}"/>
                        <ui:ToggleSwitch x:Name="disableLockScreen" FontSize="12" Content="{DynamicResource disableLockScreenToggle}" Margin="0,10,0,0" Checked="disableLockScreen_Checked" Unchecked="disableLockScreen_Unchecked" ToolTip="{DynamicResource disableLockScreenToolTip}"/>
                        <ui:ToggleSwitch x:Name="adjustMenuDelay" FontSize="12" Content="{DynamicResource adjustMenuDelayToggle}" Margin="0,10,0,0" Checked="adjustMenuDelay_Checked" Unchecked="adjustMenuDelay_Unchecked" ToolTip="{DynamicResource adjustMenuDelayToolTip}"/>
                        <ui:ToggleSwitch x:Name="disableCortana" FontSize="12" Content="{DynamicResource disableCortanaToggle}" Margin="0,10,0,0" Checked="disableCortana_Checked" Unchecked="disableCortana_Unchecked" ToolTip="{DynamicResource disableCortanaToolTip}"/>
                        <ui:ToggleSwitch x:Name="disableAppUpdates" FontSize="12" Content="{DynamicResource disableAppUpdatesToggle}" Margin="0,10,0,0" Checked="disableAppUpdates_Checked" Unchecked="disableAppUpdates_Unchecked" ToolTip="{DynamicResource disableAppUpdatesToolTip}"/>
                        <ui:ToggleSwitch x:Name="disableSearchIndex" FontSize="12" Content="{DynamicResource disableSearchIndex}" Margin="0,10,0,0" Checked="disableSearchIndex_Checked" Unchecked="disableSearchIndex_Unchecked" ToolTip="{DynamicResource disableSearchIndexToolTip}"/>
                        <ui:ToggleSwitch x:Name="oldPhotoViewer" FontSize="12" Content="{DynamicResource oldPhotoViewer}" Margin="0,10,0,0" Checked="oldPhotoViewer_Checked" Unchecked="oldPhotoViewer_Unchecked" ToolTip="{DynamicResource oldPhotoViewerToolTip}"/>
                        <ui:ToggleSwitch x:Name="oneDriveRemove" FontSize="12" Content="{DynamicResource oneDriveRemove}" Margin="0,10,0,0" Checked="oneDriveRemove_Checked" ToolTip="{DynamicResource oneDriveRemoveToolTip}"/>
                        <ui:ToggleSwitch x:Name="clockSecond" FontSize="12" Content="{DynamicResource clockSecond}" Margin="0,10,0,0" Checked="clockSecond_Checked" Unchecked="clockSecond_Unchecked" ToolTip="{DynamicResource clockSecondToolTip}"/>
                    </StackPanel >
                    <StackPanel MaxWidth="400" MinWidth="400" HorizontalAlignment="Left">
                        <ui:ToggleSwitch x:Name="explorerNetworkFolder" FontSize="12" Content="{DynamicResource explorerNetworkFolder}" Margin="0,10,0,0" Checked="explorerNetworkFolder_Checked" Unchecked="explorerNetworkFolder_Unchecked" ToolTip="{DynamicResource explorerNetworkFolderToolTip}"/>
                        <ui:ToggleSwitch x:Name="disableUAC" FontSize="12" Content="{DynamicResource disableUAC}" Margin="0,10,0,0" Checked="disableUAC_Checked" Unchecked="disableUAC_Unchecked" ToolTip="{DynamicResource disableUACToolTip}"/>
                        <ui:ToggleSwitch x:Name="attachmentManager" Margin="0,10,0,0" Checked="attachmentManager_Checked" Unchecked="attachmentManager_Unchecked" ToolTip="{DynamicResource attachmentManagerToolTip}">
                            <TextBlock FontSize="12" Text="{DynamicResource attachmentManager}" TextWrapping="Wrap"/>
                        </ui:ToggleSwitch>
                        <ui:ToggleSwitch x:Name="explorerOptimization" Margin="0,10,0,0" Checked="explorerOptimization_Checked" Unchecked="explorerOptimization_Unchecked" ToolTip="{DynamicResource explorerOptimizationToolTip}">
                            <TextBlock FontSize="12" Text="{DynamicResource explorerOptimization}" TextWrapping="Wrap"/>
                        </ui:ToggleSwitch>
                        <ui:ToggleSwitch x:Name="NumLock" Margin="0,10,0,0" Checked="NumLock_Checked" Unchecked="NumLock_Unchecked" ToolTip="{DynamicResource NumLockToolTip}">
                            <TextBlock FontSize="12" Text="{DynamicResource NumLock}" TextWrapping="Wrap"/>
                        </ui:ToggleSwitch>
                    </StackPanel>
                    <StackPanel Margin="15,0,0,0" MaxWidth="300" MinWidth="300" HorizontalAlignment="Left">
                    </StackPanel>
                    <!-- Tab 3 content here -->
                </WrapPanel>
            </TabItem>
            <!-- Tab 4 -->
            <TabItem Width="auto" FontSize="12">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                        <ui:SymbolIcon Symbol="DesktopPulse20" Margin="-5,0,0,0" />
                        <TextBlock Text="{DynamicResource windowsServicesHeaderText}" Margin="3,0,5,0"/>
                    </StackPanel>
                </TabItem.Header>
                <WrapPanel Margin="10">
                    <StackPanel MaxWidth="400" MinWidth="400" HorizontalAlignment="Left">
                        <Label Foreground="#7F8487"  Content="{DynamicResource windowsServicesLabel}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="AVCTP" Content="{DynamicResource AVCTPServiceToggle}" Margin="0,10,0,0" Checked="AVCTP_Checked" Unchecked="AVCTP_Unchecked" ToolTip="{DynamicResource AVCTPServiceToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="BitLockerDriveEncryptionService" Content="{DynamicResource BitLockerDriveEncryptionServiceToggle}" Margin="0,10,0,0" Checked="BitLockerDriveEncryptionService_Checked" Unchecked="BitLockerDriveEncryptionService_Unchecked" ToolTip="{DynamicResource BitLockerDriveEncryptionServiceToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="BluetoothSupportService" Content="{DynamicResource BluetoothSupportServiceToggle}" Margin="0,10,0,0" Checked="BluetoothSupportService_Checked" Unchecked="BluetoothSupportService_Unchecked" ToolTip="{DynamicResource BluetoothSupportServiceToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="ConnectedUserExperiencesTelemetry" Content="{DynamicResource ConnectedUserExperiencesTelemetryToggle}" Margin="0,10,0,0" Checked="ConnectedUserExperiencesTelemetry_Checked" Unchecked="ConnectedUserExperiencesTelemetry_Unchecked" ToolTip="{DynamicResource ConnectedUserExperiencesTelemetryToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="DiagnosticTrackingService" Content="{DynamicResource DiagnosticTrackingServiceToggle}" Margin="0,10,0,0" Checked="DiagnosticTrackingService_Checked" Unchecked="DiagnosticTrackingService_Unchecked" ToolTip="{DynamicResource DiagnosticTrackingServiceToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="DownloadedMapsManager" Content="{DynamicResource DownloadedMapsManagerToggle}" Margin="0,10,0,0" Checked="DownloadedMapsManager_Checked" Unchecked="DownloadedMapsManager_Unchecked" ToolTip="{DynamicResource DownloadedMapsManagerToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="FileHistoryService" Content="{DynamicResource FileHistoryServiceToggle}" Margin="0,10,0,0" Checked="FileHistoryService_Checked" Unchecked="FileHistoryService_Unchecked" ToolTip="{DynamicResource FileHistoryServiceToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="IPHelper" Content="{DynamicResource IPHelperToggle}" Margin="0,10,0,0" Checked="IPHelper_Checked" Unchecked="IPHelper_Unchecked" ToolTip="{DynamicResource IPHelperToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="WindowsUpdateMedicServiceToggle" Content="{DynamicResource WindowsUpdateMedicServiceToggle}" Margin="0,10,0,0" Checked="WindowsUpdateMedicService_Checked" Unchecked="WindowsUpdateMedicService_Unchecked" ToolTip="{DynamicResource WindowsUpdateMedicServiceToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="WindowsBiometricServiceToggle" Content="{DynamicResource WindowsBiometricServiceToggle}" Margin="0,10,0,0" Checked="WindowsBiometricService_Checked" Unchecked="WindowsBiometricService_Unchecked" ToolTip="{DynamicResource WindowsBiometricServiceToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="WindowsTimeServiceToggle" Content="{DynamicResource WindowsTimeServiceToggle}" Margin="0,10,0,0" Checked="WindowsTimeService_Checked" Unchecked="WindowsTimeService_Unchecked" ToolTip="{DynamicResource WindowsTimeServiceToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="WinRMServerToggle" Content="{DynamicResource WinRMServerToggle}" Margin="0,10,0,0" Checked="WinRMServer_Checked" Unchecked="WinRMServer_Unchecked" ToolTip="{DynamicResource WinRMServerToolTip}"/>
                        <ui:ToggleSwitch FontSize="12" x:Name="EventLogServiceToggle" Content="{DynamicResource EventLogServiceToggle}" Margin="0,10,0,0" Checked="EventLogService_Checked" Unchecked="EventLogService_Unchecked" ToolTip="{DynamicResource EventLogServiceToolTip}"/>
                        <ui:ToggleSwitch x:Name="WindowsInsiderServiceToggle" FontSize="12" Content="{DynamicResource WindowsInsiderServiceToggle}" Margin="0,10,0,0" Checked="WindowsInsiderService_Checked" Unchecked="WindowsInsiderService_Unchecked" ToolTip="{DynamicResource WindowsInsiderServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="RemoteDesktopServicesToggle" FontSize="12" Content="{DynamicResource RemoteDesktopServicesToggle}" Margin="0,10,0,0" Checked="RemoteDesktopServices_Checked" Unchecked="RemoteDesktopServices_Unchecked" ToolTip="{DynamicResource RemoteDesktopServicesToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="PrintSpoolerServiceToggle" FontSize="12" Content="{DynamicResource PrintSpoolerServiceToggle}" Margin="0,10,0,0" Checked="PrintSpoolerService_Checked" Unchecked="PrintSpoolerService_Unchecked" ToolTip="{DynamicResource PrintSpoolerServiceToggleToolTip}"/>
                    </StackPanel>
                    <StackPanel MaxWidth="370" MinWidth="300" Margin="25,0,0,0" HorizontalAlignment="Center">
                        <ui:ToggleSwitch x:Name="WindowsErrorReportingServiceToggle" FontSize="12" Content="{DynamicResource WindowsErrorReportingServiceToggle}" Margin="0,10,0,0" Checked="WindowsErrorReportingService_Checked" Unchecked="WindowsErrorReportingService_Unchecked" ToolTip="{DynamicResource WindowsErrorReportingServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="WMPNetworkSharingServiceToggle" FontSize="12" Content="{DynamicResource WMPNetworkSharingServiceToggle}" Margin="0,10,0,0" Checked="WMPNetworkSharingService_Checked" Unchecked="WMPNetworkSharingService_Unchecked" ToolTip="{DynamicResource WMPNetworkSharingServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="WebClientServiceToggle" FontSize="12" Content="{DynamicResource WebClientServiceToggle}" Margin="0,10,0,0" Checked="WebClientService_Checked" Unchecked="WebClientService_Unchecked" ToolTip="{DynamicResource WebClientServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="SuperfetchServiceToggle" FontSize="12" Content="{DynamicResource SuperfetchServiceToggle}" Margin="0,10,0,0" Checked="SuperfetchService_Checked" Unchecked="SuperfetchService_Unchecked" ToolTip="{DynamicResource SuperfetchServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="RemoteRegistryServiceToggle" FontSize="12" Content="{DynamicResource RemoteRegistryServiceToggle}" Margin="0,10,0,0" Checked="RemoteRegistryService_Checked" Unchecked="RemoteRegistryService_Unchecked" ToolTip="{DynamicResource RemoteRegistryServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="BITS_ServiceToggle" FontSize="12" Content="{DynamicResource BITS_ServiceToggle}" Margin="0,10,0,0" Checked="BITS_Service_Checked" Unchecked="BITS_Service_Unchecked" ToolTip="{DynamicResource BITSServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="DataUsageServiceToggle" FontSize="12" Content="{DynamicResource DataUsageServiceToggle}" Margin="0,10,0,0" Checked="DataUsageService_Checked" Unchecked="DataUsageService_Unchecked" ToolTip="{DynamicResource DataUsageServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="GeolocationServiceToggle" FontSize="12" Content="{DynamicResource GeolocationServiceToggle}" Margin="0,10,0,0" Checked="GeolocationService_Checked" Unchecked="GeolocationService_Unchecked" ToolTip="{DynamicResource GeolocationServiceToggleToolTip}"/>
                        <ui:ToggleSwitch x:Name="CredentialManagerServiceToggle" FontSize="12" Content="{DynamicResource CredentialManagerServiceToggle}" Margin="0,10,0,0" Checked="CredentialManagerService_Checked" Unchecked="CredentialManagerService_Unchecked" ToolTip="{DynamicResource CredentialManagerServiceToggleToolTip}"/>
